doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header
            h1 Noom 
        main
            div#welcome
                form
                    input(placeholder="room name", required, type="text")
                    button Enter Room
            div#call
                div#chat
                    h3
                    ul
                    form#msg
                        input(placeholder="message", required, type="text")
                        button#msgBtn Send   
                    form#name
                        input(placeholder="nickname", required, type="text")
                        button#nickBtn Save
                div#myStream
                    audio#myVoice(autoplay, playsinline)
                    //- video#myVoice(autoplay, playsinline, width="400", height="400") 
                    button#mute Mute
                    //- button#camera Turn Camera Off
                    select#mics
                        option(value="device") Audio Input
                    audio#peerVoice(autoplay. playsinline)
                    //- video#peerVoice(autoplay, playsinline, width="400", height="400") 

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")